{% extends 'base.html.twig' %}

{% block title %}Nos Produits - AfroBizConnect{% endblock %}

{% block content %}
    <h1>Nos Produits</h1>

    <div class="row product-container">
        {% for product in products %}
            <div class="col-nd-4">
                <div class="product-item text-center">
                    <a href="{{ path('app_product', {'slug' : product.slug}) }}">
                        <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
                        
                        <h5>{{ product.name }}</h5>
                        <span class="product-subtitle">{{ product.subtitle }}</span>
                        <span class="product-price">{{ product.prix / 100 | number_format(2) }} â‚¬</span>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
  

{% endblock %}
